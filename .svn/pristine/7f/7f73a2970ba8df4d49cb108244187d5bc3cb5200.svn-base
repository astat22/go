package Game;

import java.util.ArrayList;
import java.util.List;

public class Square 
{
	private int xCoord;
	private int yCoord;
	private Colour colour;
	private SType type;
	public SType getType() {
		return type;
	}
	private Square[] neighbours;
	/**
	 * 
	 * @param x
	 * @param y
	 * @param type 
	 */
	public Square(int x, int y, SType type)
	{
		this.xCoord=x;
		this.yCoord=y;
		this.type=type;
		this.colour = Colour.NONE;
		neighbours = new Square[4]; // S¹siedzi w tablicy s¹ w kolejnoœci N S W E
	}
	public Colour getColour() 
	{
		return colour;
	}
	public void setColour(Colour colour) 
	{
		this.colour = colour;
	}
	public Square[] getNeighbours() 
	{
		return neighbours;
	}
	/**
	 * Metoda zwracaj¹ca listê niepustych s¹siadów bie¿¹cego pola
	 * @return
	 */
	public List<Square> getNotNullNeighbours()
	{
		List<Square> notNullNeighbours = new ArrayList<Square>();
		for(Square s: neighbours)
			if(s!=null)
				notNullNeighbours.add(s);
		return notNullNeighbours;
	}
	public void setNeighbours(Square[] neighbours) 
	{
		this.neighbours = neighbours;
	}
	public int getxCoord() 
	{
		return xCoord;
	}
	public int getyCoord() 
	{
		return yCoord;
	}
}
